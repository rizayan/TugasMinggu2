@model IEnumerable<TMinggu2.Models.Student>



@{
    ViewData["Title"] = "Index";
    
}


<html>
    <head>
        <title></title>


         

 
    </head>
    <body>
        <h1 class="mt-4">Daftar Student</h1>
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
    <li class="breadcrumb-item active">Daftar Student</li>
</ol>

<div class="card mb-4">
    <div class="card-body">
    <div class="col-md-6">
        <div>
                @if (ViewData["pesan"] != null)
                {
                    @Html.Raw(ViewData["pesan"])
                }
            </div>
<p>
    <a asp-action="Create">Create New</a>
</p>

            <p>
                <form asp-action="Index" method="get">
                    Masukan Nama:
                    <input name="name" type="text" placeholder="masukan nama" />
                    <input type="submit" value="Submit"  class="btn btn-primary" />
                </form>
            </p>

<table id="example" class="display">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstMidName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EnrollmentDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstMidName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EnrollmentDate)
            </td>
            <td>
                <a class="btn btn-warning btn-sm" asp-action="Update" asp-route-id="@item.ID">Update</a>
                <a class="btn btn-primary btn-sm" asp-action="Details" asp-route-id="@item.ID">details</a>
                <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                
            </td>
        </tr>
}
    </tbody>
</table>
<script>
	$(document).ready(function () {
    $('#example').DataTable();
});
</script>

   </div>
    </div>
</div>




    </body>
</html>





